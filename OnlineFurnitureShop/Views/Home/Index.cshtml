@model IEnumerable<ShopIndexServiceModel>
@using static OnlineFurnitureShop.Core.Constants.RoleConstants;

@{
    ViewData["Title"] = "Home Page";
    var furnitures = Model.ToList();
}

@if (!furnitures.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for buying Furniture!</h1>
        <p class="lead">
            There are no Furniture in the system currently available
            so why don't you just add one?
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                if (User.IsInRole(AdminRole))
                {
                    <a asp-controller="Shop" asp-action="Add" class="btn btn-primary btn-lg"
           role="button">Add House</a>
                }
            }
        </p>
    </div>
}

@{
    var furniture1 = new ShopIndexServiceModel();
    var furniture2 = new ShopIndexServiceModel();
    var furniture3 = new ShopIndexServiceModel();

    if (furnitures.Count() >= 3)
    {
        furniture1 = furnitures[0];
        furniture2 = furnitures[1];
        furniture3 = furnitures[2];
    }
}

<!-- banner section start -->
<div class="banner_section layout_padding">
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row">
                        @if(furniture1 != null)
                        {
                            <div class="col-md-6">
                                <h1 class="banner_taital">@furniture1.Name</h1>
                                <p class="banner_text">@furniture1.Description</p>
                                <div class="btn_main">
                                    <div class="contact_bt"><a href="#">Contact US</a></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="image_1"><img src="@furniture1.ImageUrl"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row">
                        @if (furniture2 != null)
                        {
                            <div class="col-md-6">
                                <h1 class="banner_taital">@furniture2.Name</h1>
                                <p class="banner_text">@furniture2.Description</p>
                                <div class="btn_main">
                                    <div class="contact_bt"><a href="#">Contact US</a></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="image_1"><img src="@furniture2.ImageUrl"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row">
                        @if (furniture3 != null)
                        {
                            <div class="col-md-6">
                                <h1 class="banner_taital">@furniture3.Name</h1>
                                <p class="banner_text">@furniture3.Description</p>
                                <div class="btn_main">
                                    <div class="contact_bt"><a href="#">Contact US</a></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="image_1"><img src="@furniture3.ImageUrl"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
            <i style="font-style: initial;">&#8592</i>
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <i style="font-style: initial;">&#8594</i>
        </a>
    </div>
</div>
<!-- banner section end -->
<!-- about section start -->
<div class="about_section layout_padding">
    <div class="container">
        <div class="about_section_2">
            <div class="row">
                <div class="col-md-6">
                    <div class="image_2"><img src="~/template/images/img-2.png"></div>
                </div>
                <div class="col-md-6">
                    <h1 class="about_taital">About Us</h1>
                    <p class="about_text">There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised </p>
                    <div class="readmore_bt"><a href="#">Read More</a></div>
                </div>
            </div>
